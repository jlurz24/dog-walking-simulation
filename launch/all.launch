<launch>
  <include file="$(find pr2_machine)/$(env ROBOT).machine" />
  <rosparam command="load" file="$(find pr2_moveit_config)/config/kinematics.yaml"/>

  <!-- Move it -->
  <include file="$(find pr2_moveit_config)/launch/planning_context.launch">
    <arg name="load_robot_description" value="true"/>
  </include>
   <include file="$(find pr2_moveit_config)/launch/move_group.launch">
    <arg name="allow_trajectory_execution" value="true"/>
  </include>
  <include file="$(find pr2_moveit_config)/launch/default_warehouse_db.launch" />
  <!-- End move it -->

  <param name="leash_length" value="1.25"/>

  <node pkg="dogsim" type="get_path_server" name="get_path_server" output="screen"/>

 <param name="dog" textfile="$(find dogsim)/models/dog.model" />
  <node name="spawn_dog" pkg="gazebo" type="spawn_model" args="-param dog -gazebo -model dog -x 1.5 -z 0.1" respawn="false" output="screen" />

 <param name="leash" textfile="$(find dogsim)/models/leash.model" />
   <node name="spawn_leash" pkg="gazebo" type="spawn_model" args="-param leash -gazebo -model leash -x 0 -y 0 -z 0" respawn="false" output="screen" />

  <node name="map_server" pkg="map_server" type="map_server" args="$(find gazebo_worlds)/Media/materials/textures/map_blank.png 0.1" respawn="true" />
 
  <node pkg="dogsim" type="map_broadcaster" name="map_broadcaster" output="screen"/>

  <node pkg="dogsim" type="avoid_dog" name="avoid_dog" output="screen"/>

  <node pkg="dogsim" type="robot_driver" name="robot_driver" output="screen"/>
  <node pkg="dogsim" type="dog_position_detector" name="dog_position_detector" output="screen">
    <param name="known_position_window" value="0.0"/>
  </node>

  <node pkg="dogsim" type="adjust_dog_position_action" name="adjust_dog_position_action" output="screen">
  </node>

  <node pkg="dogsim" type="move_robot_action" name="move_robot_action" output="screen"/>

  <node pkg="dogsim" type="move_dog_away_action" name="move_dog_away_action" output="screen"/>

  <node pkg="dogsim" type="path_visualizer" name="path_visualizer" />

  <node pkg="dogsim" type="leash_visualizer" name="leash_visualizer" />

  <node pkg="pr2_tuckarm" type="tuck_arms.py" name="tuck_arms_app" output="screen" args="-l tuck -r untuck"/>

   <node pkg="dogsim" type="move_arm_to_base_position_action" name="move_arm_to_base_position_action" output="screen"/>

</launch>
